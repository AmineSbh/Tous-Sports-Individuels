<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="data.Sport" table="Sport">
	    <id name="id" column="id_sport">
	    	<generator class="incremente"></generator>
	    </id>
	    
	    <joined-subclass name="data.Course" table="Course">
        	<key column="id_sport"/>
        	<property name="kilometer" column="kilometer"/>
        	<property name="MaxSpeed" column="MaxSpeed"/>
        	<property name="AverageSpeed" column="AverageSpeed"/>
    	</joined-subclass>
    </class>
</hibernate-mapping>